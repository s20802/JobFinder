<%- include('../../fragments/header.ejs') %>
<main>
    <h2>New recruitment</h2>
    <form class="form" novalidate onsubmit="return validateForm();">
        <label for="recUsername">Username: <span class="symbol-required">*</span></label>
        <select name="recUsername" id="recUsername" class="error-input" required>
            <option>-- Select company --</option>
            <option value="1">kubacow</option>
            <option value="2">michal2001</option>
            <option value="3">adamaria</option>
            <option value="4">john2000</option>
        </select>
        <span id="errorRecUsername" class="errors-text">Field is required</span>

        <label for="companyRecName">Company Name: <span class="symbol-required">*</span></label>
        <select name="companyRecName" id="companyRecName" class="error-input" required>
            <option>-- Select company --</option>
            <option value="1">Google</option>
            <option value="2">CIA</option>
            <option value="3">BBC</option>
            <option value="4">Zara</option>
            <option value="5">Job Finder</option>
        </select>
        <span id="errorCompanyRecName" class="errors-text">Field is required</span>

        <label for="recPosition">Position: <span class="symbol-required">*</span></label>
        <input type="text" name="recPosition" id="recPosition" class="error-input" required>
        <span id="errorRecPosition" class="errors-text">Field is required</span>

        <label for="status">Status:</label>
        <select name="status" id="status">
            <option>Opened (default)</option>
            <option>CV sent</option>
            <option>Interviewing</option>
            <option>Closed</option>
        </select>
        <span id="errorStatus" class="errors-text"></span>

        <label for="dateOpened">Date Opened:</label>
        <input type="date" name="dateOpened" id="dateOpened" required class="error-input">
        <span id="errorDateOpened" class="errors-text">Field is required</span>

        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes" rows="5" cols="40"></textarea>
        <span id="errorNotes"></span>

        <div class="form-buttons">
            <p id="errorSummary" class="errors-text">Form contains errors!</p>
            <input type="submit" value="Add" class="form-button-submit">
            <a href="recruitment-list.html" class="form-button-cancel">Cancel</a>
        </div>
    </form>

</main>
<%- include('../../fragments/footer.ejs') %>